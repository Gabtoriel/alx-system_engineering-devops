#!/usr/bin/env bash
# Bash script to configure the nginx server for a 301 redirect
apt-get -y update
apt-get -y nginx
echo 'Hello World' > /var/www/html/index.nginx-debian.html
echo "ceci n'est pas une page" > /var/www/html/error404.html
redirect = "/server_name _;/a \\n\trewrite ^\/redirect_me \/ permanent;"
error = "/server_name _;/a \\n\terror_page 404 \/error404.html;"
sed -i $redirect /etc/nginx/sites-available/default
sed -i $error /etc/nginx/sites-available/default
service nginx start
